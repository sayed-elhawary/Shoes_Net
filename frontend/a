    const token = localStorage.getItem('token');
    axios.delete(`${process.env.REACT_APP_API_URL}/api/products/${id}`, {
      headers: { Authorization: `Bearer ${token}` },
    })
      .then(() => setProducts(products.filter(p => p._id !== id)))
